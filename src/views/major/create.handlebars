<div class="d-flex justify-content-between align-items center">
    <h2>Criação de curso</h2>
    <h4><a href="/majors/"><i class="bi bi-arrow-left-circle"></i></a></h4>
</div>
<form action="/majors/{{#if major}}update/{{major.id}}{{else}}create{{/if}}" method="post">
    <div class="mb-3">
        <label for="code" class="form-label">Código do Curso</label>
        <input type="text" value="{{major.code}}" name="code" class="form-control" id="code" placeholder="Codigo">
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Nome</label>
        <input type="text" name="name" class="form-control" id="name" placeholder="Nome">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Example textarea</label>
        <textarea name="description" class="form-control" id="description" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Criar Curso</button>
    </div>
</form>
