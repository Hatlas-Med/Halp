<h2>Listagem de Cursos</h2>
<h4><a href="/majors/create"><i class="bi bi-plus-square-fill"></i></a></h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Código</th>
      <th scope="col">Nome do Curso</th>
      <th class="text-end">Opções</th>
    </tr>
  </thead>
  <tbody>
    {{#each majors}}
        <tr>
        <th>{{code}}</th>
        <td>{{name}}</td>
        <td class="text-end">
          <a href="/majors/read/{{id}}"><i class="bi bi-eye"></i></a>
          <a href="/majors/update/{{id}}"><i class="bi bi-pencil"></i></i></a>
          <a data-bs-toggle="modal" data-bs-target="#modal-remove-major-{{id}}" href="/majors/remove/{{id}}"><i class="bi bi-trash"></i></i></a>
        </td>
        </tr>
    {{/each}}
  </tbody>
</table>
{{#each majors}}
<!-- Modal -->
<div class="modal fade" id="modal-remove-major-{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Deleção de Curso</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Tem certeza que deseja remover o curso <b>{{name}}</b>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button onclick="removeMajor('{{id}}')" type="button" class="btn btn-primary">Sim, pode remover</button>
      </div>
    </div>
  </div>
</div>
{{/each}}
