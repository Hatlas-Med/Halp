<div class="d-flex justify-content-between align-items center">
    <h2>Login de Usuário</h2>
    <h4><a href="/users/"><i class="bi bi-arrow-left-circle"></i></a></h4>
</div>
<form action="/users/login" method="post">
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" name="email" class="form-control" id="email" placeholder="Fulano@icomp.ufam.edu.br">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Senha do Usuário</label>
        <input type="password" name="password" class="form-control" id="password">
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Criar Usuário</button>
    </div>
</form>
